{
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.json"
    }
  },
  "testEnvironment": "jest-environment-jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
  "setupFiles": ["<rootDir>/src/setupTests.ts"],
  "verbose": true,
  "transform": {
    "^.+\\.tsx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(scss)$": "jest-transform-css"
  }
}
